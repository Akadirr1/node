			timeOffs.forEach(timeOff => {
				const startDate = new Date(timeOff.startTime || timeOff.startDate);
				const endDate = new Date(timeOff.endTime || timeOff.endDate);

				const formatDate = (date) => {
					return date.toLocaleDateString('tr-TR', {
						day: 'numeric',
						month: 'long',
						year: 'numeric'
					});
