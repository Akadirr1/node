<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifremi Unuttum - <%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-center mb-0">Şifremi Unuttum</h4>
                    </div>
                    <div class="card-body">
                        <div id="alertContainer"></div>
                        
                        <div id="phoneForm">
                            <p class="text-muted text-center mb-4">
                                Telefon numaranızı girin. Size şifre sıfırlama kodu göndereceğiz.
                            </p>
                            
                            <form id="forgotPasswordForm">
                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Telefon Numarası</label>
                                    <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                                           placeholder="05xxxxxxxxx" required>
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100" id="sendCodeBtn">
                                    Şifre Sıfırlama Kodu Gönder
                                </button>
                            </form>
                        </div>
                        
                        <div class="text-center mt-3">
                            <p class="mb-0">
                                <a href="/login" class="text-decoration-none">← Giriş sayfasına dön</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        class ForgotPassword {
            constructor() {
                this.init();
            }

            init() {
                this.setupEventListeners();
            }

            setupEventListeners() {
                document.getElementById('forgotPasswordForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.sendResetCode();
                });

                // Phone number formatting
                document.getElementById('phoneNumber').addEventListener('input', (e) => {
                    let value = e.target.value.replace(/[^0-9]/g, '');
                    if (value.length > 11) value = value.slice(0, 11);
                    e.target.value = value;
                });
            }

            async sendResetCode() {
                const formData = new FormData(document.getElementById('forgotPasswordForm'));
                const data = Object.fromEntries(formData);

                if (!data.phoneNumber) {
                    this.showAlert('Lütfen telefon numaranızı girin.', 'danger');
                    return;
                }

                if (data.phoneNumber.length < 10) {
                    this.showAlert('Lütfen geçerli bir telefon numarası girin.', 'danger');
                    return;
                }

                const sendBtn = document.getElementById('sendCodeBtn');
                sendBtn.disabled = true;
                sendBtn.textContent = 'Kod Gönderiliyor...';

                try {
                    const response = await fetch('/api/otp/send-password-reset-otp', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();

                    if (response.ok) {
                        this.showAlert('Şifre sıfırlama kodu gönderildi! SMS\'inizi kontrol edin.', 'success');
                        
                        // Store phone number and redirect to OTP verification
                        localStorage.setItem('otpPhone', data.phoneNumber);
                        localStorage.setItem('otpType', 'password_reset');
                        
                        setTimeout(() => {
                            window.location.href = `/otp-verification?phone=${encodeURIComponent(data.phoneNumber)}&type=password_reset`;
                        }, 2000);
                    } else {
                        this.showAlert(result.message, 'danger');
                    }
                } catch (error) {
                    this.showAlert('Bir hata oluştu. Lütfen tekrar deneyin.', 'danger');
                } finally {
                    sendBtn.disabled = false;
                    sendBtn.textContent = 'Şifre Sıfırlama Kodu Gönder';
                }
            }

            showAlert(message, type) {
                const alertContainer = document.getElementById('alertContainer');
                const alert = document.createElement('div');
                alert.className = `alert alert-${type} alert-dismissible fade show`;
                alert.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                alertContainer.innerHTML = '';
                alertContainer.appendChild(alert);

                // Auto dismiss success alerts
                if (type === 'success') {
                    setTimeout(() => {
                        alert.remove();
                    }, 5000);
                }
            }
        }

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new ForgotPassword();
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>