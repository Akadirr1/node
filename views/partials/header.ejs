				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarTogglerDemo02">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="/">Anasayfa</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/hakkimizda">Hakkımızda</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/book">Randevu Al</a>
					</li>
				</ul>
				<!-- Logged out view -->
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0" id="logged-out-view" style="display: none;">
					<li class="nav-item">
						<a class="nav-link login-btn" href="/login">Giriş Yap</a>
					</li>
					<li class="nav-item">
						<a class="nav-link register-btn" href="/register">Kayıt Ol</a>
					</li>
				</ul>
				<!-- Logged in view -->
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0" id="logged-in-view" style="display: none;">
					<li class="nav-item">
						<a class="nav-link welcome-text" id="user-name">Hoşgeldin</a>
					</li>
					<!-- Customer Menu -->
					<li class="nav-item" id="customer-menu" style="display: none;">
						<a class="nav-link" href="/myAppointments">Randevularım</a>
					</li>
					<!-- Barber Menu -->
					<li class="nav-item" id="barber-menu" style="display: none;">
						<a class="nav-link" href="/barber-dashboard">Yönetim Paneli</a>
					</li>
					<!-- Admin Menu -->
					<li class="nav-item" id="admin-menu" style="display: none;">
						<a class="nav-link" href="/admin-dashboard">Tüm Randevular</a>
					</li>
					<li class="nav-item">
						<a class="nav-link logout-btn" href="#" id="logout-link">Çıkış Yap</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<style>
		/* Dark theme navbar */
		.navbar {
			background-color: #2d2d2d !important;
			border-bottom: 1px solid #4a4a4a;
			padding: 12px 0;
		}

		.navbar-brand img {
			filter: brightness(1.2);
		}

		.navbar-nav .nav-link {
			color: #ffffff !important;
			font-weight: 500;
			padding: 8px 16px !important;
			border-radius: 6px;
			transition: all 0.3s ease;
			margin: 0 4px;
		}

		.navbar-nav .nav-link:hover {
			color: #8bc34a !important;
			background-color: rgba(139, 195, 74, 0.1);
		}

		.navbar-nav .nav-link.active {
			color: #8bc34a !important;
			background-color: rgba(139, 195, 74, 0.15);
		}

		.login-btn {
			color: #8bc34a !important;
			border: 1px solid #8bc34a;
		}

		.login-btn:hover {
			background-color: #8bc34a !important;
			color: #000000 !important;
		}

		.register-btn {
			background-color: #8bc34a !important;
			color: #000000 !important;
			border: 1px solid #8bc34a;
		}

		.register-btn:hover {
			background-color: #7cb342 !important;
			color: #000000 !important;
		}

		.welcome-text {
			color: #8bc34a !important;
			font-weight: 600;
		}

		.logout-btn {
			color: #ff6b6b !important;
			border: 1px solid #ff6b6b;
		}

		.logout-btn:hover {
			background-color: #ff6b6b !important;
			color: #ffffff !important;
		}

		.navbar-toggler {
			border-color: #4a4a4a;
		}

		.navbar-toggler:focus {
			box-shadow: 0 0 0 0.25rem rgba(139, 195, 74, 0.25);
		}

		.navbar-toggler-icon {
			filter: brightness(0) invert(1);
		}

		/* Mobile responsive */
		@media (max-width: 991.98px) {
			.navbar-nav .nav-link {
				margin: 2px 0;
			}

			.login-btn,
			.register-btn,
			.logout-btn {
				text-align: center;
				margin: 4px 0;
			}
		}
	</style>

	<script>
		// Sayfa yüklendiğinde kullanıcı durumunu kontrol et
		document.addEventListener('DOMContentLoaded', async function () {
			await checkUserStatus();
			setActiveNavLink();
			
			// Logout button event listener
			const logoutLink = document.getElementById('logout-link');
			if (logoutLink) {
				logoutLink.addEventListener('click', function(e) {
					e.preventDefault();
					logoutUser();
				});
			}
		});

		// Set active nav link based on current page
		function setActiveNavLink() {
			const currentPath = window.location.pathname;
			const navLinks = document.querySelectorAll('.navbar-nav .nav-link');

			navLinks.forEach(link => {
				const href = link.getAttribute('href');
				if (href === currentPath || (currentPath === '/' && href === '/')) {
					link.classList.add('active');
				} else {
					link.classList.remove('active');
				}
			});
		}

		async function checkUserStatus() {
			try {
				const response = await fetch('/profile/me', {
					credentials: 'include'
				});

				if (response.ok) {
					const userData = await response.json();
					// Kullanıcı giriş yapmış
					showLoggedInView(userData.name, userData.role);
				} else {
					// Kullanıcı giriş yapmamış
					showLoggedOutView();
				}
			} catch (error) {
				console.error('Kullanıcı durumu kontrol edilirken hata:', error);
				// Hata durumunda logout view göster
				showLoggedOutView();
			}
		}

		function showLoggedInView(userName, userRole) {
			document.getElementById('logged-out-view').style.display = 'none';
			document.getElementById('logged-in-view').style.display = 'flex';
			document.getElementById('user-name').textContent = `Hoşgeldin, ${userName}`;

			// Hide all role-specific menus first
			document.getElementById('customer-menu').style.display = 'none';
			document.getElementById('barber-menu').style.display = 'none';
			document.getElementById('admin-menu').style.display = 'none';

			// Show appropriate menu based on user role
			if (userRole === 'customer') {
				document.getElementById('customer-menu').style.display = 'block';
			} else if (userRole === 'barber') {
				document.getElementById('barber-menu').style.display = 'block';
			} else if (userRole === 'admin') {
				document.getElementById('admin-menu').style.display = 'block';
			}
		}

		function showLoggedOutView() {
			document.getElementById('logged-out-view').style.display = 'flex';
			document.getElementById('logged-in-view').style.display = 'none';
		}

		async function logoutUser() {
			try {
				console.log('Logout başlatılıyor...');
				
				// Cookie'yi temizlemek için logout endpoint'i çağır
				const response = await fetch('/profile/logout', {
					method: 'POST',
					credentials: 'include',
					headers: {
						'Content-Type': 'application/json'
					}
				});

				console.log('Logout response:', response.status);

				if (response.ok) {
					const data = await response.json();
					console.log('Logout başarılı:', data.message);
				}

				// LocalStorage'ı temizle
				localStorage.removeItem('user');
				
				// Başarılı olsun ya da olmasın logout view'ı göster
				showLoggedOutView();

				// Ana sayfaya yönlendir
				window.location.href = '/';
			} catch (error) {
				console.error('Çıkış yapılırken hata:', error);
				// Hata durumunda da logout view göster
				showLoggedOutView();
				window.location.href = '/';
			}
		}
	</script>

	<!-- Bootstrap JS -->
